---
import { Icon } from "astro-icon/components";
---

<div class="container">
  <h5>Techs</h5>
  <div class="slider">
    <div class="track">
      <div class="slide">
        <Icon name="react" />
      </div>
      <div class="slide">
        <Icon name="node" />
      </div>
      <div class="slide">
        <Icon name="js" />
      </div>
      <div class="slide">
        <Icon name="bd" />
      </div>
      <div class="slide">
        <Icon name="git" />
      </div>
      <div class="slide">
        <Icon name="bootstrap" />
      </div>
      <div class="slide">
        <Icon name="html" />
      </div>
      <div class="slide">
        <Icon name="css" />
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    padding: 1.5em;
    width: 100%;
  }

  h5 {
    color: var(--grey);
    font-size: 1em;
  }

  .slider {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .track {
    display: flex;
    max-width: 425px;
    flex-direction: row;
    justify-content: baseline;
    align-items: center;
    gap: 1em;
  }

  [data-icon] {
    width: 100%;
    font-size: 1.5em;
  }

  [data-icon]:hover {
    scale: 1.3;
  }

</style>
